-- Modern Tasarım & Gelişmiş Fling Script
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local ToggleBtn = Instance.new("TextButton")
local UIStroke = Instance.new("UIStroke")

-- UI Ayarları
ScreenGui.Parent = game.CoreGui -- Resetlendiğinde gitmemesi için CoreGui
ScreenGui.ResetOnSpawn = false

MainFrame.Name = "ModernFling"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.Position = UDim2.new(0.5, -75, 0.5, -50)
MainFrame.Size = UDim2.new(0, 150, 0, 100)
MainFrame.Active = true
MainFrame.Draggable = true

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

UIStroke.Color = Color3.fromRGB(60, 60, 60)
UIStroke.Thickness = 2
UIStroke.Parent = MainFrame

Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 35)
Title.Text = "TOUCH FLING"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1

ToggleBtn.Parent = MainFrame
ToggleBtn.Position = UDim2.new(0.1, 0, 0.45, 0)
ToggleBtn.Size = UDim2.new(0.8, 0, 0, 35)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleBtn.Text = "DURUM: OFF"
ToggleBtn.TextColor3 = Color3.fromRGB(255, 60, 60)
ToggleBtn.Font = Enum.Font.GothamSemibold
ToggleBtn.TextSize = 12

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 6)
btnCorner.Parent = ToggleBtn

-- Fling Mantığı
local lp = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local active = false

local function startFling()
    while active do
        RS.Heartbeat:Wait()
        local char = lp.Character
        local hrp = char and char:FindFirstChild("HumanoidRootPart")
        local hum = char and char:FindFirstChildOfClass("Humanoid")

        if hrp and hum then
            -- Karakterin ölmesini engellemek için sadece Velocity ile oynuyoruz
            -- AssemblyLinearVelocity modern yöntemdir
            local oldVel = hrp.AssemblyLinearVelocity
            hrp.AssemblyLinearVelocity = Vector3.new(10000, 10000, 10000) 
            RS.RenderStepped:Wait()
            hrp.AssemblyLinearVelocity = oldVel
        end
    end
end

ToggleBtn.MouseButton1Click:Connect(function()
    active = not active
    if active then
        ToggleBtn.Text = "DURUM: ON"
        ToggleBtn.TextColor3 = Color3.fromRGB(60, 255, 60)
        task.spawn(startFling)
    else
        ToggleBtn.Text = "DURUM: OFF"
        ToggleBtn.TextColor3 = Color3.fromRGB(255, 60, 60)
    end
end)
